@model Staj_Ime_TakipDegerlendirmeSistemi.Models.TeacherPaginationViewModel



<nav>
    <ul class="pagination">
        @if (Model.page > 1)
        {
            <li class="page-item"><a class="page-link previous" page="@(Model.page-1)" href="#">Önceki</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" page="@(Model.page-1)" href="#">Önceki</a></li>
        }


        @{
            int record = 2;
            for (int i = Model.page - record; i <= Model.page + record; i++)
            {
                if (i > 0 && i <= Model.totalPageNumber)
                {
                    if (Model.page == i)
                    {
                        <li class="page-item active"><a class="page-link" page="@i" href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" page="@i" href="#">@i</a></li>
                    }

                }

            }
        }



        @if (Model.page < Model.totalPageNumber)
        {
            <li class="page-item"><a class="page-link" page="@(Model.page+1)" href="#">Sonraki</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" page="@(Model.page+1)" href="#">Sonraki</a></li>
        }
    </ul>
</nav>
