                    </div>
                    <div class="col-2 d-flex justify-content-end">
                        @*Mühendis &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check5, "Seçim1")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check5, "Seçim1", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check5">
                                Mühendis
                            </label>
                        </div>
                    </div>

                    <div class="col-2 d-flex justify-content-center">
                        @*Teknik Öğretmen &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check5, "Seçim2")*@
