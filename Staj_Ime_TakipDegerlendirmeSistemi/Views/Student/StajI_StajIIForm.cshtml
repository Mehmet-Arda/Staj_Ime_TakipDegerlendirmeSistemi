                    </div>


                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control", autocomplete = "off", placeholder = "E-posta" })
                            @Html.LabelFor(x => x.EPosta)
                        </div>
                    </div>

                </div>



                <div class="row mt-3 d-flex justify-content-center">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.Il, new { @class = "form-control", autocomplete = "off", placeholder = "İl" })
                            @Html.LabelFor(x => x.Il)
                        </div>
                    </div>


                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.Ilce, new { @class = "form-control", autocomplete = "off", placeholder = "İlçe" })
                            @Html.LabelFor(x => x.Ilce)
                        </div>
                    </div>

                </div>



                <div class="row mt-3 d-flex justify-content-center">

                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control", autocomplete = "off", placeholder = "Posta Kodu" })
                            @Html.LabelFor(x => x.PostaKodu)
