                    </div>


                </div>



                <div class="row mt-3 d-flex justify-content-center">

                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumIl, new { @class = "form-control", autocomplete = "off", placeholder = "İl" })
                            @Html.LabelFor(x => x.KurumIl)
                        </div>
                    </div>


                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumIlce, new { @class = "form-control", autocomplete = "off", placeholder = "İlçe" })
                            @Html.LabelFor(x => x.KurumIlce)
                        </div>
                    </div>


                </div>


                <div class="row mt-3 d-flex justify-content-center">
                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumPostaKodu, new { @class = "form-control", autocomplete = "off", placeholder = "Posta Kodu" })
                            @Html.LabelFor(x => x.KurumPostaKodu)
                        </div>
                    </div>


                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumTelefon, new { @class = "form-control", autocomplete = "off", placeholder = "Telefon" })
                            @Html.LabelFor(x => x.KurumTelefon)
                        </div>
                    </div>



                </div>


                <div class="row mt-3 d-flex justify-content-center">

                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumFaks, new { @class = "form-control", autocomplete = "off", placeholder = "Faks" })
                            @Html.LabelFor(x => x.KurumFaks)
                        </div>
                    </div>


                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumEPosta, new { @class = "form-control", autocomplete = "off", placeholder = "E-posta" })
                            @Html.LabelFor(x => x.KurumEPosta)
