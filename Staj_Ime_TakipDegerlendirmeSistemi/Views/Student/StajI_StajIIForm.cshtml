                    </div>

                    <div class="col-1 d-flex">
                        @*Hayır &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check2, "Seçim2")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check2, "Seçim2", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check2">
                                Hayır
                            </label>
                        </div>
                    </div>

                </div>


                <div class="row mt-5 d-flex justify-content-center">
                    <div class="col-8 text-end">
                        Genel Sağlık Sigortası (GSS) (Gelir Testi Yaptırdım Pirim Ödüyorum)
                    </div>
                    <div class="col-1 d-flex">
                        @*Evet &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check3, "Seçim1")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check3, "Seçim1", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check3">
                                Evet
                            </label>
                        </div>
                    </div>

                    <div class="col-1 d-flex">
                        @*Hayır &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check3, "Seçim2")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check3, "Seçim2", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check3">
                                Hayır
                            </label>
                        </div>
                    </div>

                </div>



                <div class="row mt-5 d-flex justify-content-center">
                    <div class="col-8 text-end">
                        25 Yaşını Doldurdum
                    </div>
                    <div class="col-1 d-flex">
                        @*Evet &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check4, "Seçim1")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check4, "Seçim1", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check4">
                                Evet
