                    </div>


                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.Yil0, new { @class = "form-control", autocomplete = "off", placeholder = "Yil" })
                            @Html.LabelFor(x => x.Yil0)
                        </div>
                    </div>
                </div>



                <div class="row mt-5 fs-4">
                    <b class="text-center">Staj Bilgileri</b>
                </div>


                <div class="row mt-3 fs-5">
                    <b class="text-center">Staj Başlangıç</b>
                </div>

                <div class="row mt-4 d-flex justify-content-center">

                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBaslangicGun, new { @class = "form-control", autocomplete = "off", placeholder = "Gün" })
                            @Html.LabelFor(x => x.StajBaslangicGun)
                        </div>
                    </div>


                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBaslangicAy, new { @class = "form-control", autocomplete = "off", placeholder = "Ay" })
                            @Html.LabelFor(x => x.StajBaslangicAy)
                        </div>
                    </div>


                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBaslangicYil, new { @class = "form-control", autocomplete = "off", placeholder = "Yıl" })
                            @Html.LabelFor(x => x.StajBaslangicYil)
                        </div>
                    </div>




                </div>


                <div class="row mt-4 fs-5">
                    <b class="text-center">Staj Bitiş</b>
                </div>

                <div class="row mt-4 d-flex justify-content-center">


                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBitisGun, new { @class = "form-control", autocomplete = "off", placeholder = "Gün" })
                            @Html.LabelFor(x => x.StajBitisGun)
                        </div>
                    </div>

                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBitisAy, new { @class = "form-control", autocomplete = "off", placeholder = "Ay" })
                            @Html.LabelFor(x => x.StajBitisAy)
                        </div>
                    </div>


                    <div class="col-1">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.StajBitisYil, new { @class = "form-control", autocomplete = "off", placeholder = "Yıl" })
                            @Html.LabelFor(x => x.StajBitisYil)
