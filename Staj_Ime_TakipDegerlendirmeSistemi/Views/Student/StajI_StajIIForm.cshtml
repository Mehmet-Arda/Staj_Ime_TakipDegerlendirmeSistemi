                <div class="row mt-5 d-flex justify-content-center">

                    <div class="col-1 d-flex">
                        @*Staj-I &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check1, "Seçim1")*@

                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check1, "Seçim1",new {@class="form-check-input" })
                          
                            <label class="form-check-label" for="check1">
                                Staj-I
                            </label>
                        </div>
                    </div>

                    <div class="col-1 d-flex">
                        @*Staj-II &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check1, "Seçim2")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check1, "Seçim2", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check1">
                                Staj-II
                            </label>
                        </div>
                    </div>

                </div>




                <div class="row mt-5 d-flex justify-content-center">
                    <div class="col-8 text-end">
                        Ailemden, Kendimden veya Anne-Baba Üzarinden
                        Genel Sağlık Sigortası Kapsamında Sağlık Hizmeti Alıyorum

                    </div>
                    <div class="col-1 d-flex">
                        @*Evet &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check2, "Seçim1")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check2, "Seçim1", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check2">
