                    </div>

                    <div class="col-1 d-flex">
                        @*Hayır &nbsp;&nbsp; @Html.RadioButtonFor(x => x.check4, "Seçim2")*@
                        <div class="form-check">
                            @Html.RadioButtonFor(x => x.check4, "Seçim2", new { @class = "form-check-input" })

                            <label class="form-check-label" for="check4">
                                Hayır
                            </label>
                        </div>
                    </div>

                </div>






                <div class="row mt-5 fs-5">
                    <b class="text-center">Kurum Bilgileri:</b>
                </div>




                <div class="row mt-3 d-flex justify-content-center">

                    <div class="col-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.KurumResmiAd, new { @class = "form-control", autocomplete = "off", placeholder = "Resmi Adı" })
                            @Html.LabelFor(x => x.KurumResmiAd)
                        </div>
                    </div>


                    <div class="col-3">
                        <div class="form-floating">
