                                                <div id="validation-ad" class="validation-container">
                                                    @Html.ValidationMessageFor(x => x.ogretmen.Bolum, "")
                                                </div>
                                            </div>
                                        </div>



                                        <div class="col-xl-3 col-lg-4 col-md-6 ">
                                            <div class="profile-main-input-container">
                                                <div class="form-floating input-container d-flex justify-content-center">

                                                    <div class="input-icon disabled d-flex justify-content-center align-items-center">
                                                        <i class="fa-solid fa-user"></i>
                                                    </div>

                                                    @Html.TextBoxFor(x => x.ogretmen.KomisyonOgretmen.FirstOrDefault().Komisyonlar.KomisyonAdi, new { @class = "custom-input form-control disabled", placeholder = " ", disabled = true, autocomplete = "off" })
                                                    @Html.LabelFor(x => x.ogretmen.KomisyonOgretmen.FirstOrDefault().Komisyonlar.KomisyonAdi, new { @class = "custom-label ms-3" })
                                                </div>

