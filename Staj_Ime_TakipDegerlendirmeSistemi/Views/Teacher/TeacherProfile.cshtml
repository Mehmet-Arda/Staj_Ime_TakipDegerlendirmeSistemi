                                                    @Html.ValidationMessageFor(x => x.ogretmen.OkulSicilNo, "")
                                                </div>
                                            </div>
                                        </div>






                                    </div>




                                    <div class="row d-flex justify-content-center mt-5">

                                        <div class="col-xl-3 col-lg-4 col-md-6 ">
                                            <div class="profile-main-input-container">
