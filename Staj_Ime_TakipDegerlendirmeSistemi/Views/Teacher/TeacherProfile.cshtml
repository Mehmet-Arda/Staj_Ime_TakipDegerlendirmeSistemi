
@using Staj_Ime_TakipDegerlendirmeSistemi.Models

@model TeacherProfileViewModel

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğretmen Profili</title>

    <link href="~/Content/teacher_style.css" rel="stylesheet" />
    <link rel="icon" href="~/files/ms-icon-310x310.png" type="image/x-icon">

</head>
<body class="teacher-profile">
    <div class="wrapper">

        <div class="container ">
            @Html.Partial("_TeacherHeaderPartialView",Model.ogretmen)

            <div class="row mt-5">

                <div class="col-md-6 col-lg-4 col-xl-4 m-auto">
                    <div class="card card-teacher-profile">

                        <div class="card-avatar">
                            <div class="image-input-container">
                                <img class="" src=@(Model.ogretmen.Fotograf == null ? "/files/person.png" : "/uploads/images/teachers/" + Model.ogretmen.Fotograf) title="Profil Resmi Önizlemesi" id="profilResmiImage" />

                                <input type="file" form="teacherProfileForm" name="profilResmi" id="profilResmiInput" accept="image/*" />
                                <label for="profilResmiInput" class="bg-danger">
                                    <i class="fa-solid fa-camera"></i>
                                </label>
                            </div>
                        </div>

                        <div class="card-body">
                            <h6 class="card-category">@Model.ogretmen.Roller.RolAdi</h6>
                            <h4 class="card-title">@Model.ogretmen.Adi @Model.ogretmen.Soyadi</h4>
                            <p class="card-description">
                                Öğretmen Profil Sayfası
                            </p>
                        </div>

                    </div>
                </div>
            </div>

